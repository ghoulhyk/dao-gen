		} else {
			session = session.And(item.GetWhereBuilder())
		}
	}

	if limit >= 0 {
		session.Limit(limit)
	}

	var cnt int64
	cnt, err = session.Update(updateValMap)
	if err != nil {
		return
	}

	updateRows = uint64(cnt)

	return
}
