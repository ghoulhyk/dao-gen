	for _, item := range *updateValItemList {
		if item.IsRawSql() {
			session.SetExpr(item.ColumnName(), item.GetRawSql())
		} else {
			updateValMap[item.ColumnName()] = item.GetVal()
		}
	}

	for _, item := range *whereCondList {
